generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  role      Role
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
}

model Team {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  coach      String
  stadium    String
  players    Player[]
  standings  Standing[]
}

model Player {
  id         Int         @id @default(autoincrement())
  name       String
  age        Int
  nationality String
  position   Position
  team       Team?       @relation(fields: [teamId], references: [id])
  teamId     Int?
  events     MatchEvent[]
  injuries   Injury[]
  stats      Statistic[]
  transfers  Transfer[]
}

model Match {
  id         Int         @id @default(autoincrement())
  date       DateTime
  location   String
  homeTeam   Team        @relation("HomeTeam", fields: [homeTeamId], references: [id])
  homeTeamId Int
  awayTeam   Team        @relation("AwayTeam", fields: [awayTeamId], references: [id])
  awayTeamId Int
  league     League?     @relation(fields: [leagueId], references: [id])
  leagueId   Int?
  events     MatchEvent[]
  stats      Statistic[]
}

model MatchEvent {
  id         Int       @id @default(autoincrement())
  type       String    // e.g. "goal", "yellow_card", "red_card", "substitution"
  minute     Int
  match      Match     @relation(fields: [matchId], references: [id])
  matchId    Int
  player     Player?   @relation(fields: [playerId], references: [id])
  playerId   Int?
  details    String?
}

model League {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  country    String
  matches    Match[]
  standings  Standing[]
}

model Standing {
  id            Int     @id @default(autoincrement())
  team          Team    @relation(fields: [teamId], references: [id])
  teamId        Int
  league        League  @relation(fields: [leagueId], references: [id])
  leagueId      Int
  wins          Int
  draws         Int
  losses        Int
  points        Int
}

model Transfer {
  id         Int     @id @default(autoincrement())
  player     Player  @relation(fields: [playerId], references: [id])
  playerId   Int
  fromTeam   Team    @relation("FromTeam", fields: [fromTeamId], references: [id])
  fromTeamId Int
  toTeam     Team    @relation("ToTeam", fields: [toTeamId], references: [id])
  toTeamId   Int
  fee        Int
  date       DateTime
  transferType  TransferType
}

model Injury {
  id         Int      @id @default(autoincrement())
  player     Player   @relation(fields: [playerId], references: [id])
  playerId   Int
  description String
  date       DateTime
  duration   Int      // days
}

model Statistic {
  id         Int      @id @default(autoincrement())
  player     Player   @relation(fields: [playerId], references: [id])
  playerId   Int
  match      Match    @relation(fields: [matchId], references: [id])
  matchId    Int
  goals      Int
  assists    Int
  passes     Int
  tackles    Int
  saves      Int
}

enum Role{
  NORMAL
  ADMIN
  SUPER_ADMIN
}

enum Position{
  GOALKEEPER
  DEFENDER
  MIDFIELDER
  ATTACKER
}

enum TransferType{
  PERMANENT
  LOAN
  FREE
}